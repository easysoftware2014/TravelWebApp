@using TravelWebApp.Domain.Entities
@model TravelWebApp.Models.BudgetModel

@{
    ViewBag.Title = "Budget";
    Layout = Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Budget</h2>


@using (Html.BeginForm("edit", "Budget", FormMethod.Post))
{
    <div class="modal fade" id="budget-edit" tabindex="-1" role="dialog" aria-labelledby="budget-edit" aria-hidden="true">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Budget Update</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">

                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="submit" class="btn confirm-btn" value="Confirm">
                </div>
            </div>
        </div>
    </div>
}

@using (Html.BeginForm("Edit", "Budget", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>Update</h4>
        <br />
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Update" class="btn btn-default" />
                </div>
            </div>
        </div>

    </div>
}

<div>
    @Html.ActionLink("Back", "Index", "Budget")
</div>

<script src="../../assets/js/core/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#btnLnkEdit').attr("data-toggle", 'modal');
    });


</script>
