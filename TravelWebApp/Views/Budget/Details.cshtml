@section scripts
{
    <script type="text/javascript">
        $(window).on('load', function () {
            $('#budget-view').modal('show');
        });

        $(document).ready(function () {
            $('#modalDismiss').click(function () {
                window.location.href = "/budget/";
            });
        });

    </script>
}