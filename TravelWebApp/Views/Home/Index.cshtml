@section scripts
{
    <script src="~/Scripts/SignalR.js">
    </script>
    
    <script type="text/javascript">
        $("#booking_search").click(function () {

            var checkOut = $('#check_out_date').val();
            var checkIn = $('#check_in_date').val();
            var place = $('#search_place').val();
            var priceLimit = $('#price_limit option:selected').text();

            // '{"destination":"'+ place +'}'destination
            //JSON.stringify({ 'employeeCustomerId': contactId, 'customerIds': customerIds })
            $.ajax({
                type: "GET",
                url: "/bookingmanagement/GetPropertyList/",
                contentType: "application/json; charset=utf-8",
                data: {destination: place},
                dataType: "json",
                success: function(obj) {
                    $('#booking-hotel').modal('hide');

                    $.each(obj.Properties.Result,
                        function(index, value) {
                            $('.col-md-12').append(
                                `<div class="card">
                                    <div class="card-header card-header-primary">
                                        <h4 class="card-title ">${value.HotelName}</h4>
                                        <p class="card-category"> ${value.Review}</p>
                                    </div>
                                  <div class="card-body">
                                    <div class="thumbnail">
                                        <img src="${value.PhotoUrl
                                }" class="img-rounded img-responsive"></img>                                       
                                    </div>                                   
                                        <p>${value.MinimumPrice}</p>                                    
                                 </div>
                            </div>`
                            );

                        });
                }

            });
            
            alert('CheckIn: '+checkIn + ' CheckOut: '+ checkOut + ' Limit: ' + priceLimit + ' Place: ' + place);
        });
        $("#search_plac").focus();
    </script>

