        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Transport search</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" class="form-control datepicker" placeholder="Collection date" required="required">
                        </div>
                    </div>
