                        <div class="form-group">
                            <input type="text" class="form-control datepicker" placeholder="Return date" required="required">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <select id="from" placeholder="From" class="form-control dropdown-backdrop">
                                <option>select departure ...</option>
                                <option>Gauteng</option>
                                <option>Namibia</option>
                                <option>Holand</option>
                                <option>South Afria</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <select id="trans_destination" placeholder="Destination" class="form-control dropdown-backdrop">
                                <option>select destination ...</option>
                                <option>Gauteng</option>
                                <option>Namibia</option>
                                <option>Holand</option>
                                <option>South Afria</option>
                            </select>
                        </div>
                    </div>
                </div>
                <br />
                <div class="modal-footer">
                    <div class="form-group">
                        <button type="button" id="search_transport" class="btn btn-success"><i class="fa fa-search" aria-hidden="true"> Search </i></button>

                    </div>
                    <div class="form-group">
                        <button type="button" class="close" data-dismiss="modal"><i class="fa fa-close" aria-hidden="true"> Close </i></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12"></div>
</div>


@section scripts
{
    <script type="text/javascript">
        $('.datepicker').datepicker({
            dateFormat: 'dd-mm-yy'
        });
        
        $('#book_flight').click(function () {
            $('#booking-flight').modal('show');
        });

        $('#book_hotel').click(function () {
            $('#booking-hotel').modal('show');
        });

        $('#search_flight').click(function() {
            $.ajax({
                type: "GET",
                url: "bookingmanagement/booking",
                success: function (result) {

                    if (result.success === true) {

                        window.location.href = "/bookingmanagement/";
                    } else {
                        alert("Incorrect combination of email and password, please reenter");
                    }
                },
                dataType: "json"
            });
        });
       
        $('#book_car').click(function () {
            $('#booking-car').modal('show');
        });
        $("input[type=radio]").click(function () {
            $(this).prop('checked', true);

            if ($(this)[0].value == "return") {
                $('#returnDate').attr("style", "display: block;");
            }
            else
                $('#returnDate').attr("style", "display: none;");
        });

    </script>
}




